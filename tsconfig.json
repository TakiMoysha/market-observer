{
  "include": ["server/**/*"],
  "exclude": [ "dist", "node_modules" ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "target": "ES2021",
    "lib": [ "ESNext" ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [ "bun-types" ]
  },
}
